<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home_page_grade_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgAbout"
    android:orientation="vertical">
    <include layout="@layout/page_title" />
    <RelativeLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_appIcon"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/about_laichushu2x"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/tv_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_appIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/app_name"
            android:visibility="gone"
            android:textColor="@color/characterGray"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_appIcon">

            <TextView
                android:id="@+id/tv_appIntroduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/app_introduce_details"
                android:textColor="@color/characterLightGray2"
                android:textSize="@dimen/edit2" />
        </ScrollView>
    </RelativeLayout>

    <include layout="@layout/page_title" />


</LinearLayout>
