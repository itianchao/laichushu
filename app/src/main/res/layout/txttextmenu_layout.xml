<?xml version="1.0" encoding="utf-8"?>
<org.geometerplus.android.fbreader.SettingWindow
    android:id="@+id/setting_panel"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true"
             android:background="#DF111111"
             android:focusable="false"
             android:orientation="vertical"
             android:visibility="visible"
             xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:weightSum="8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="字号  "
            android:textColor="@android:color/white"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/txttextmenu_textsize_decrease"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:src="@drawable/reduce_font"/>

        <TextView
            android:id="@+id/txttextmenu_textsize_text"
            tools:text="12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/fontsize"
            android:textSize="@dimen/edit2"/>

        <ImageView
            android:id="@+id/txttextmenu_textsize_add"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:src="@drawable/add_font"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:visibility="gone"
        android:weightSum="8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="字体  "
            android:textColor="@android:color/white"/>

        <RadioGroup
            android:id="@+id/txttextmenu_texsort_radiogroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="7"
            android:checkedButton="@+id/txttextmenu_texsort_1"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/txttextmenu_texsort_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/txttextmenu_radiobutton_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="新宋体"
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/txttextmenu_texsort_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/txttextmenu_radiobutton_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="娃娃体"
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/txttextmenu_texsort_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/txttextmenu_radiobutton_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="隶书体"
                android:textColor="@android:color/white"/>
        </RadioGroup>
    </LinearLayout>

</org.geometerplus.android.fbreader.SettingWindow >