<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/global"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/global"
                android:gravity="center"
                android:text="@string/reward_dialog"
                android:textColor="@color/white"
                android:textSize="@dimen/edit"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/btn_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="center"
                android:src="@drawable/reward_elect" />
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbn_public"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:checked="true"
            android:text="默认公开"
            android:textColor="@color/black"
            android:textSize="@dimen/edit2" />

        <include layout="@layout/line" />

        <RadioButton
            android:id="@+id/rbn_private"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="仅个人"
            android:textColor="@color/black"
            android:textSize="@dimen/edit2" />

        <include layout="@layout/line" />

        <RadioButton
            android:id="@+id/rbn_master"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="大咖"
            android:textColor="@color/black"
            android:textSize="@dimen/edit2" />

        <include layout="@layout/line" />

        <RadioButton
            android:id="@+id/rbn_press"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="出版社"
            android:textColor="@color/black"
            android:textSize="@dimen/edit2" />

        <include layout="@layout/line" />

        <RadioButton
            android:id="@+id/rbn_fans"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="粉丝"
            android:textColor="@color/black"
            android:textSize="@dimen/edit2" />

        <include layout="@layout/line" />
    </RadioGroup>

</LinearLayout>