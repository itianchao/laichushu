<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_annTime"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="12dp"
            android:textColor="@color/characterLightGray2"
            android:textSize="@dimen/edit2" />

        <TextView
            android:id="@+id/tv_annContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_annTime"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColor="@color/characterGray"
            android:textSize="@dimen/edit2" />

        <ImageView
            android:id="@+id/iv_annDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_annContent"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/icon_delete_gray" />

    </RelativeLayout>
    <include layout="@layout/item_distance" />
</LinearLayout>
