<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bgGrey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_dyHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/tv_dyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_dyHead"
            android:textColor="@color/black"
            android:textSize="@dimen/edit3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dyTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_dyHead"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_dyHead"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/edit3"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dyTitleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:textColor="@color/black"
        android:textSize="@dimen/edit3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_dyTitleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/edit3"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_dyCollection"
                style="@style/new_up"
                android:drawableLeft="@drawable/icon_like_red" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_scan"
                style="@style/new_books"
                android:drawableLeft="@drawable/navigation_find_normal"
                android:text="话题详情"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
