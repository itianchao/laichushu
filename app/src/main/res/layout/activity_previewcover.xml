<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    android:orientation="vertical">

    <include layout="@layout/page_title" />
    <ImageView
        android:id="@+id/webadd"
        android:layout_marginTop="12dp"
        android:background="@color/LightGrey"
        android:layout_width="270dp"
       android:layout_gravity="center_horizontal"
        android:layout_height="350dp"
        android:layout_below="@id/title_bar"
        android:visibility="visible" />
    <TextView
        android:id="@+id/tv_perDetails"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_rectangle_fill_hint"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/characterGray"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/frenchGrey">

        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/global"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>