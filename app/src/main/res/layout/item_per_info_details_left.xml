<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_HeadSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_headSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_HeadSend"
            android:background="@drawable/chat_receive2x"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp"
            android:textColor="@color/characterLightGray1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_senderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_headSend"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:padding="6dp"
            android:background="@color/LightGrey"
            android:textColor="@color/characterLightGray1"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
