<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/page_title" />

    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_reason"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/title"
        android:text="请选择举报原因"
        android:textColor="@color/hint" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_reason"
        android:background="@color/hint" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_reason"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbn_1"
            style="@style/repot_select"
            android:checked="true"
            android:drawableLeft="@drawable/select_report_radiobutton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hint" />

        <RadioButton
            android:id="@+id/rbn_2"
            style="@style/repot_select"
            android:drawableLeft="@drawable/select_report_radiobutton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hint" />

        <RadioButton
            android:id="@+id/rbn_3"
            style="@style/repot_select"
            android:drawableLeft="@drawable/select_report_radiobutton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hint" />

        <RadioButton
            android:id="@+id/rbn_4"
            style="@style/repot_select"
            android:drawableLeft="@drawable/select_report_radiobutton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hint" />

    </RadioGroup>

    <LinearLayout
        android:layout_below="@+id/tv_reason"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:gravity="center_vertical"
            android:text="政治原因"
            android:textColor="@color/black"
            android:textSize="@dimen/edit2"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hint" />
        <TextView
            android:gravity="center_vertical"
            android:text="色情低俗"
            android:textColor="@color/black"
            android:textSize="@dimen/edit2"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hint" />
        <TextView
            android:gravity="center_vertical"
            android:text="涉嫌抄袭"
            android:textColor="@color/black"
            android:textSize="@dimen/edit2"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hint" />
        <TextView
            android:gravity="center_vertical"
            android:text="其他"
            android:textColor="@color/black"
            android:textSize="@dimen/edit2"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hint" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="备注"
                android:textColor="@color/hint"
                android:textSize="@dimen/edit2" />
        </LinearLayout>

        <EditText
            android:gravity="top"
            android:id="@+id/et_instruction"
            android:drawablePadding="5dp"
            android:hint="文字说明"
            android:textColorHint="@color/hint"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_rectangle_fill_hint"
            android:textColor="@color/black"
            android:textSize="@dimen/edit3" />
    </LinearLayout>
</RelativeLayout>