<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGrey">

    <include
        android:id="@+id/edit_top"
        layout="@layout/page_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_top"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_editHeadImg"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tv_editHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="24dp"
                android:text="头像"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit" />

            <ImageView
                android:id="@+id/iv_editHead"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/iv_editHeadInto" />


            <ImageView
                android:id="@+id/iv_editHeadInto"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/home_right2x" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_nickName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tv_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingLeft="24dp"
                android:text="昵称"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit" />

            <EditText
                android:id="@+id/ed_nickNameContent"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:maxLength="10"
                android:hint="张三"
                android:textColorHint="@color/LightGrey"
                android:gravity="center_vertical|right"
                android:textColor="@color/edit2"
                android:textSize="@dimen/edit2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="24dp"
                android:text="性别"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit" />

            <TextView
                android:id="@+id/ed_sexContent"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/edit2"
                android:textSize="@dimen/edit2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Birthday"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tv_Birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="24dp"
                android:text="生日"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit" />

            <TextView
                android:id="@+id/ed_birthdayContent"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/edit2"
                android:textSize="@dimen/edit2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_area"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="24dp"
                android:text="地区"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit" />

            <TextView
                android:id="@+id/tv_areaContent"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/edit2"
                android:textSize="@dimen/edit2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_idCard"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tv_idCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="24dp"
                android:text="身份证"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit" />

            <TextView
                android:id="@+id/tv_idCardContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/iv_idCardInto"
                android:gravity="right"
                android:text="未认证"
                android:textColor="@color/edit2"
                android:textSize="@dimen/edit2" />

            <ImageView
                android:id="@+id/iv_idCardInto"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/home_right2x" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_signature"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="24dp"
                android:gravity="center_vertical"
                android:text="个性签名"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_signature"
                android:background="@color/white" />

            <EditText
                android:id="@+id/ed_signatureContent"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view_line"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_rectangle_fill_hint"
                android:gravity="top"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:textColor="@color/edit2"
                android:textSize="@dimen/edit2" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
