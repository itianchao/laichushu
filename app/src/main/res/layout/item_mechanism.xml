<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_mechanism"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:scaleType="center"
        tools:src="@drawable/img_default" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_mechanism"
        android:layout_toEndOf="@+id/iv_mechanism"
        android:layout_toRightOf="@+id/iv_mechanism"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        tools:text="北京教育出版社" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_name"
        android:layout_toEndOf="@+id/iv_mechanism"
        android:layout_toRightOf="@+id/iv_mechanism"
        android:drawableLeft="@drawable/icon_address"
        android:gravity="center_vertical"
        android:text="海淀南路大街108号"
        android:textColor="@color/hint"
        android:textSize="@dimen/edit3" />
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/iv_mechanism"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/hint" />
</RelativeLayout>