<?xml version="1.0" encoding="utf-8"?>
<org.geometerplus.android.fbreader.SettingModleWindow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="@color/memubg_color"
    android:focusable="false"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:visibility="visible">
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_margin="10dp"
            android:checked="true"
            android:gravity="center"
            android:text="日间模式"
            android:textColor="@drawable/select_moon_color"
            android:id="@+id/rbn_sun"
            android:background="@drawable/select_moon_button"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <RadioButton
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="夜间模式"
            android:textColor="@drawable/select_moon_color"
            android:id="@+id/rbn_moon"
            android:background="@drawable/select_moon_button"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </RadioGroup>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/txtprogress_concern"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtprogress_text"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:text="88%"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/txtprogress_seekbar"          
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:maxHeight="3dip"
            android:minHeight="3dip"
            android:thumbOffset="0dip"
            android:progress="55"
            android:progressDrawable="@drawable/txtview_po_seekbar"
            android:thumb="@drawable/txtview_seekbar_thumb" />
    </LinearLayout>

    <Button
        android:visibility="gone"
        android:background="@drawable/txtprogressmenu_bt_selector"
        android:id="@+id/txtprogress_concern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:text="确定" />

</org.geometerplus.android.fbreader.SettingModleWindow>