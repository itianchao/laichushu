<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_mechanism"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_mechanism"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/iv_mechanism"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        tools:text="北京教育出版社" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_mechanism"
        android:gravity="center_vertical"
        android:paddingRight="24dp"
        android:singleLine="true"
        android:text="出版社地址 ：海淀南路大街108号"
        android:textColor="@color/hint"
        android:textSize="@dimen/edit2" />

    <TextView
        android:id="@+id/tv_publishGrade"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_address"
        android:layout_toEndOf="@+id/iv_mechanism"
        android:layout_toRightOf="@+id/iv_mechanism"
        android:gravity="center_vertical"
        android:paddingRight="24dp"
        android:singleLine="true"
        android:text="出版社星级：五行出版社"
        android:textColor="@color/hint"
        android:textSize="@dimen/edit2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/iv_mechanism"
        android:layout_marginTop="10dp"
        android:background="@color/hint" />
</RelativeLayout>