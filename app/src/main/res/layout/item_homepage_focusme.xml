<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bgGrey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/line_view"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/tv_dyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toLeftOf="@+id/cb_focus"
            android:layout_toRightOf="@+id/iv_dyHead"
            android:textColor="@color/characterLightGray1"
            android:textSize="@dimen/edit3" />

        <CheckBox
            android:id="@+id/cb_focus"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_rectangle_btn_state"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textSize="@dimen/edit4" />

        <ImageView
            android:id="@+id/iv_dyHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>