<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGray">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="24dp">

            <ImageView
                android:id="@+id/iv_userHeadImg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/rl_head"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/red2"
                    android:textSize="@dimen/edit2" />

                <TextView
                    android:id="@+id/tv_serviceType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/red2"
                    android:textSize="@dimen/edit2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bgDesignContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="@color/characterLightGray2"
                    android:textSize="@dimen/edit2" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_teamworkNumber"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/rl_head"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:singleLine="true"
            android:textColor="@color/characterGray"
            android:textSize="@dimen/edit2" />

        <TextView
            android:id="@+id/tv_bgDesign"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/rl_head"
            android:layout_toRightOf="@+id/rl_head"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textColor="@color/characterGray"
            android:textSize="@dimen/edit2" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/rl_item" />
</RelativeLayout>
