<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_detail_book"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/img_default" />
            <ImageView
                android:id="@+id/iv_book_statue"
                tools:src="@drawable/icon_book_statue1"
                android:scaleType="centerCrop"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </FrameLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/title_bg_color1"
                    android:textSize="16sp"
                    tools:text="职场心计" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratbar_detail_num"
                    android:layout_width="wrap_content"
                    android:layout_height="9.5dp"
                    android:layout_marginTop="3dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressDrawable="@drawable/ratingbar_home"
                    android:rating="3"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/tv_detail_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"
                    tools:text="3.0分" />

                <TextView
                    android:id="@+id/tv_detail_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"
                    tools:text="(1852评论)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作　　者："
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"
                    tools:text="金庸" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类　　型："
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_detail_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"
                    tools:text="武侠" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字　　数："
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_detail_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp"
                    tools:text="约50万字" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收到打赏："
                        android:textColor="@color/main_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_detail_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/main_text_color"
                        android:textSize="12sp"
                        tools:text="7450元" />

                    <TextView
                        android:id="@+id/tv_detail_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/main_text_color"
                        android:textSize="12sp"
                        tools:text="(2029人打赏)" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>