<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGray">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_userHeadImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/edit_top"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_teamworkNum"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/iv_userHeadImg"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:text="88人已合作"
            android:textColor="@color/characterGray"
            android:textSize="@dimen/edit2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="24dp"
            android:layout_toRightOf="@+id/tv_teamworkNum"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_experience"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5年工作经验"
                    android:textColor="@color/characterGray"
                    android:textSize="@dimen/edit2" />

                <TextView
                    android:id="@+id/tv_publish"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="人民出版社"
                    android:textColor="@color/characterGray"
                    android:textSize="@dimen/edit2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_realName"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="柴静"
                    android:textColor="@color/red"
                    android:textSize="@dimen/edit2" />

                <TextView
                    android:id="@+id/tv_authorDegree"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="金牌编辑"
                    android:textColor="@color/red"
                    android:textSize="@dimen/edit2" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
