<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bgGrey" />

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_view"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv_likeIcons"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/msg_like2x" />

            <TextView
                android:id="@+id/tv_likeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_likeIcons"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit2" />
            <ImageView
                android:id="@+id/iv_deleteMsg"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/icon_delete2x"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_readerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="42dp"
                android:textColor="@color/auditing"
                android:textSize="@dimen/edit2" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/tv_readerName"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit2"/>

            <TextView
                android:id="@+id/tv_bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_type"
                android:singleLine="true"
                android:textColor="@color/auditing"
                android:textSize="@dimen/edit2" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_msgCommentContent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bgGrey"
            android:gravity="top"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/characterLightGray2"
            android:textSize="@dimen/edit3" />
    </LinearLayout>

</RelativeLayout>