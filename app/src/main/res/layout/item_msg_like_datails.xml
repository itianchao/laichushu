<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGrey"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_likeIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/activity_keep"/>

            <TextView
                android:id="@+id/tv_likeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/iv_likeIcon"
                android:text="2016年11月29日18:44:44"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit2"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tv_readerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="张三"
                android:textColor="@color/auditing"
                android:textSize="@dimen/edit2"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="评论的您的作品"
                android:layout_toRightOf="@+id/tv_readerName"
                android:textColor="@color/characterGray"
                android:textSize="@dimen/edit2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_middle"
                android:text="《神雕侠侣》"
                android:textColor="@color/auditing"
                android:textSize="@dimen/edit2"
                android:textStyle="bold" />
        </RelativeLayout>

            <TextView
                android:id="@+id/tv_commentConetnt"
                android:layout_width="match_parent"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="12345678945852963741"
                android:background="@color/bgGrey"
                android:textColor="@color/auditing"
                android:textSize="@dimen/edit"
                android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>